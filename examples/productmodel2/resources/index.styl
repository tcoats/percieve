$primary = #46413E
$unselected = #bbb
$active = #666
$subtle-border = #ddd
$brand-primary = #F8993F
$danger = #d00000

*
  box-sizing border-box

body
  margin 0
  padding 0
  background-color $subtle-border
  font-family Lato, Helvetica, sans-serif
  font-size 16px

#root
  background-color white
  max-width 40rem
  min-height 100%
  margin 0 auto
  border-left 1px solid $subtle-border
  border-right 1px solid $subtle-border
  display grid
  grid-template-rows 3.75rem auto
  padding-bottom 5rem
